<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF3E9"
    tools:ignore="MissingConstraints">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Settings"
        app:navigationIcon="@drawable/ic_equal_sign"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/girl"
            android:src="@drawable/girl" />

        <TextView
            style="@style/Text.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/check_your_profile"
            android:layout_marginTop="20dp"
            android:layout_marginStart="33dp" />

        <TextView
            style="@style/Text.Medium.50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail"
            android:layout_marginTop="50dp"
            android:layout_marginStart="33dp" />

        <Button
            style="@style/Button.Orange.Another"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:layout_marginTop="76dp"
            android:layout_marginStart="29dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/general"
        style="@style/Text.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general"
        android:textSize="16sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notifications"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/general"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/customization"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/notifications"
        />

    <TextView
        android:id="@+id/support"
        style="@style/Text.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/support"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/customization"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/contact"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/support"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/feedback"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/contact"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/privacy_policy"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/feedback"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/about"
        style="@style/Button.White.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_orange_rectangle"
        app:iconTint="#FDA758"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_nav_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="23dp"
            android:src="@drawable/ic_camp"
            android:background="#0000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="107dp"
            android:src="@drawable/ic_courses"
            android:background="#0000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="103dp"
            android:src="@drawable/ic_community"
            android:background="#0000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_settings"
            android:background="#0000"/>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>