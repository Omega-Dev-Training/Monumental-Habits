<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/plum</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/plum</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Text.Light50" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/plum_50</item>
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Text.Bold" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/plum</item>
        <item name="fontFamily">@font/klasik_regular</item>
    </style>

    <style name="Text.Bold2" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plum</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Text.Medium" parent="ThemeOverlay.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/plum</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Text.Medium.30">
        <item name="android:textColor">@color/plum_30</item>
    </style>

    <style name="Text.Medium.50" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/plum_50</item>
        <item name="textAllCaps">true</item>

    </style>



</resources>