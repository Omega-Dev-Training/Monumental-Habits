    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="Button.White">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Button.White.Big" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:drawableStart">@drawable/ic_orange_rectangle</item>
    </style>

    <style name="Button.Orange">
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="Button.Orange.Another">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner</item>
    </style>

