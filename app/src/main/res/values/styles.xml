    //Manrope Bold text style

    <style name="Text" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextHabitsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberHabitsStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purpuric</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.50">
        <item name="android:textColor">@color/purpuric_50</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DayOfWeekStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/purpuric_50</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="AuthorTextStyle"> // !!!
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/purpuric_50</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.30">
        <item name="android:textColor">@color/purpuric_30</item>
    </style>


    //Manrope Medium text style

    <style name="Text.Medium">
        <item name="fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Text.Medium.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purpuric</item>
    </style>

    <style name="Text.Medium.50">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/purpuric_50</item>
    </style>

    <style name="name">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Text.Medium.50.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.50.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="date">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/purpuric_50</item>
    </style>


    //Klasik text style

    <style name="Text.Klasik">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/klasik_regular</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Text.Klasik.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ciferci">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:fontFamily">@font/klasik_regular</item>
    </style>

    <style name="MotivationStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purpuric</item>
        <item name="android:fontFamily">@font/klasik_regular</item>
    </style>

    <style name="bottom_spiner">
        <item name="android:background">@drawable/very_big_bottom</item>
    </style>

</resources>